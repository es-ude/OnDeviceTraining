{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "gen_ninja",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "build/${presetName}"
    },
    {
      "name": "host",
      "hidden": true,
      "inherits": "gen_ninja"
    },
    {
      "name": "unit_test",
      "displayName": "Unit-Test",
      "inherits": "host",
      "cacheVariables": {
        "DEBUG_MODE": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "host",
      "hidden": true,
      "configurePreset": "host",
      "jobs": 4
    },
    {
      "name": "unit_test",
      "inherits": "host",
      "configurePreset": "unit_test",
      "targets": "all_unit_tests"
    }
  ],
  "testPresets": [
    {
      "name": "unit_test",
      "displayName": "Unit Tests",
      "configurePreset": "unit_test",
      "output": {
        "outputJUnitFile": "unit-test.junit",
        "outputOnFailure": true
      },
      "filter": {
        "include": {
          "label": "unit"
        }
      }
    }
  ]
}
